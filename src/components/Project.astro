---
import IconGithub from '../Icons/IconGithub.astro';
interface Props {
  title: string,
  description: string,
  technologies: string[],
  github: string,
  web: string,
  image: string
}
const { title, description, technologies, github, web, image } = Astro.props
---

<article class=" bg-slate-700 rounded-lg p-4">
  <h3 class="text-2xl font-semibold"> {title} </h3>
  <p> {description} </p>
  <p> {technologies.join(" ")} </p>
  <p> {image} </p>

  <a 
    href={github} 
    target="_blank"
    class="flex gap-2 items-center"
  >
    <IconGithub width="25" height="25" />
    GitHub
  </a>

  <a 
    href={web} 
    target="_blank"
    class="flex gap-2 items-center"
  >
    <!-- Icono Web -->
    Sitio Web
  </a>
</article>