---
import IconGithub from '../Icons/IconGithub.astro';
import IconWorld from '../Icons/IconWorld.astro';

interface Props {
  title: string,
  description: string,
  technologies: string[],
  github: string,
  web: string,
  image: string
}

const { title, description, technologies, github, web, image } = Astro.props
---

<article class="flex flex-col bg-slate-700 rounded-lg overflow-hidden sm:flex-row">
  <img 
    src={image} 
    alt={title}
    class="sm:w-6/12 object-cover"
  />

  <div class="p-4 ">
    <h3 class="text-3xl font-bold"> {title} </h3>
    <p class="my-5"> {description} </p>
  
    <div class="flex gap-3">
      <a 
        href={github} 
        target="_blank"
        class="button gap-2"
      >
        <IconGithub width="25" height="25" />
        GitHub
      </a>
    
      <a 
        href={web} 
        target="_blank"
        class="button gap-1"
      >
        <IconWorld width="30" height="30" />
        Sitio Web
      </a>
    </div>
  </div>
</article>

<style>
  .button {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 8px 12px;
    border-radius: 8px;
    background-color: var(--fourth-color);
  }
</style>